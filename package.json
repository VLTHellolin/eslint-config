{
  "name": "@hellolin/eslint-config",
  "version": "0.3.2",
  "type": "module",
  "description": "ESLint config for React & Next.js developers.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "pnpx @eslint/config-inspector --config eslint-all.config.ts",
    "build": "tsup --clean --dts",
    "build:inspector": "pnpx @eslint/config-inspector build --config eslint-all.config.ts",
    "lint": "eslint --fix .",
    "release": "bumpp && pnpm publish"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "react",
    "nextjs"
  ],
  "author": "hellolin <i@hellolin.top>",
  "license": "MIT",
  "homepage": "https://github.com/VLTHellolin/eslint-config",
  "peerDependencies": {
    "eslint": "^9.19.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.0",
    "@types/node": "^22.13.4",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "prettier": "^3.5.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@eslint/markdown": "^6.2.2",
    "@next/eslint-plugin-next": "^15.1.7",
    "@stylistic/eslint-plugin": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@unocss/eslint-plugin": "^66.0.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-parser-plain": "^0.1.1",
    "eslint-plugin-command": "^3.1.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-react-dom": "^1.27.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-hooks-extra": "^1.27.0",
    "eslint-plugin-react-naming-convention": "^1.27.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-web-api": "^1.27.0",
    "eslint-plugin-react-x": "^1.27.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-yml": "^1.17.0",
    "globals": "^16.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "yaml-eslint-parser": "^1.2.3"
  }
}
