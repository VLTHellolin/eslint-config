{
  "name": "@hellolin/eslint-config",
  "version": "0.1.0",
  "type": "module",
  "description": "Hellolin's eslint config for React & Next.js developers.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npx @eslint/config-inspector --config eslint-all.config.ts",
    "build": "tsup --clean --dts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build --config eslint-all.config.ts",
    "lint": "eslint --fix .",
    "release": "bumpp && pnpm publish"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "react",
    "nextjs"
  ],
  "author": "hellolin <i@hellolin.top>",
  "license": "MIT",
  "peerDependencies": {
    "eslint": "^9.19.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.0",
    "@types/node": "^22.13.1",
    "bumpp": "^10.0.2",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@eslint/markdown": "^6.2.2",
    "@next/eslint-plugin-next": "^15.1.6",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@unocss/eslint-plugin": "^65.4.3",
    "eslint-config-flat-gitignore": "^2.0.0",
    "eslint-parser-plain": "^0.1.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.8.0",
    "eslint-plugin-react-dom": "^1.26.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-hooks-extra": "^1.26.2",
    "eslint-plugin-react-naming-convention": "^1.26.2",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-react-web-api": "^1.26.2",
    "eslint-plugin-react-x": "^1.26.2",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-yml": "^1.16.0",
    "globals": "^15.14.0",
    "jsonc-eslint-parser": "^2.4.0",
    "yaml-eslint-parser": "^1.2.3"
  }
}
