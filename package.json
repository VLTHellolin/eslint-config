{
  "name": "@hellolin/eslint-config",
  "version": "0.4.0",
  "type": "module",
  "description": "ESLint config for React & Next.js developers.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.6.4",
  "scripts": {
    "dev": "pnpx @eslint/config-inspector --config eslint-all.config.ts",
    "build": "tsup --clean --dts",
    "build:inspector": "pnpx @eslint/config-inspector build --config eslint-all.config.ts",
    "lint": "eslint --fix .",
    "release": "bumpp && pnpm publish"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "react",
    "nextjs"
  ],
  "author": "hellolin <i@hellolin.top>",
  "license": "MIT",
  "homepage": "https://github.com/VLTHellolin/eslint-config",
  "peerDependencies": {
    "@next/eslint-plugin-next": "*",
    "@unocss/eslint-plugin": "*",
    "eslint": "^9",
    "eslint-plugin-storybook": "*"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@next/eslint-plugin-next": "^15.2.3",
    "@types/node": "^22.13.10",
    "@unocss/eslint-plugin": "^66.0.0",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "eslint-plugin-storybook": "^0.11.6",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@eslint/markdown": "^6.3.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-parser-plain": "^0.1.1",
    "eslint-plugin-command": "^3.1.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsonc": "^2.19.1",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-react-dom": "^1.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-hooks-extra": "^1.35.0",
    "eslint-plugin-react-naming-convention": "^1.35.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-web-api": "^1.35.0",
    "eslint-plugin-react-x": "^1.35.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-yml": "^1.17.0",
    "globals": "^16.0.0",
    "import-sync": "^2.2.3",
    "jsonc-eslint-parser": "^2.4.0",
    "yaml-eslint-parser": "^1.3.0"
  }
}
